FROM ann-benchmarks

RUN sudo apt-get update && sudo apt-get install -y cmake pkg-config liblz4-dev
RUN git clone https://github.com/mariusmuja/flann
RUN mkdir flann/build
RUN cd flann/build && cmake ..
RUN cd flann/build && make -j4
RUN cd flann/build && sudo make install
RUN sudo pip3 install sklearn
RUN python3 -c 'import pyflann'
